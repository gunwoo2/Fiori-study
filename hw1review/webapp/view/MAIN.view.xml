<mvc:View controllerName="sync.e03.hw1review.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table id="idTable"
                items="{/SPFLISet}" 
                mode="SingleSelectMaster" 
                selectionChange="onSelectionChange"
                >

                <columns>
                    <Column >
                        <Label text="항공사" />
                    </Column>

                    <Column >
                        <Label text="항공편번호" />
                    </Column>

                    <Column >
                        <Label text="출발국가" />
                    </Column>

                    <Column >
                        <Label text="출발도시" />
                    </Column>

                    <Column >
                        <Label text="도착국가" />
                    </Column>

                    <Column >
                        <Label text="도착도시" />
                    </Column>

                </columns>

                <items>
                    <ColumnListItem >
                        <cells>
<!-- 키필드를 표현하기 위한 ObjectIdentifier -->
                            <ObjectIdentifier title="{Carrid}"/>
                            <ObjectIdentifier title="{Connid}"/>
<!-- 키 필드를 제외한 속성들을 명시할 때 아래의 코드 사용-->
                            <ObjectAttribute text="{Countryfr}"/>
                            <ObjectAttribute text="{Cityfrom}"/>

                            <Text text="{Countryto}"/>
                            <Text text="{Cityto}"/>

                        </cells>
                    </ColumnListItem>
                </items>

            </Table>
        </content>
    </Page>
</mvc:View>