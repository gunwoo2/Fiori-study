<mvc:View controllerName="sync.e03.odatamodelmultidelete.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core"
    >
    <Page id="page" title="{i18n>title}" >
        <content>

            <t:Table id="idTable"
                rows="{/CarrierSet}">

                <t:columns>
                    <t:Column>
                        <!-- 필드명이 등장-->
                        <!--항공사-->
                        <Label text="{i18n>labelCarrid}" />
                        <t:template>
                            <!-- 데이터가 등장하는 구역-->
                            <ObjectIdentifier title="{Carrid}" />
                        </t:template>
                    </t:Column>
                    
    
                    <t:Column>
                        <!--항공사명-->
                        <Label text="{i18n>labelCarrname}" />
                        <t:template>
                            <!-- 데이터가 등장하는 구역-->
                            <ObjectAttribute text="{Carrname}" />
                        </t:template>
                    </t:Column>
    
                    <t:Column>
                        <!--통화코드-->
                        <Label text="{i18n>labelCurrcode}" />
                        <t:template>
                            <ComboBox selectedKey="{Currcode}"
                                items="{view>/Currency}" 
                                editable="true"
                                enabled="true" >
                                <items>
                                    <!-- 위에 xmlnsLcore="sap.ui.core" 를 <mvc:View> 의 속성으로 추가-->
                                     <core:Item key="{view>Key}" text="{view>Key} : {view>Name}" />
                                </items>
                            </ComboBox>
                        </t:template>
                    </t:Column>
    
                    <t:Column>
                        <!--웹 페이지-->
                        <Label text="{i18n>labelUrl}" />
                        <t:template>
                            <Link href="{Url}" text="항공사 홈페이지 이동" />
                        </t:template>
                    </t:Column>
    
    
                </t:columns>
            </t:Table>

        </content>
        <footer>
            <OverflowToolbar >
                <content>
                    <ToolbarSpacer />
                    <Button text="삭제" icon="sap-icon://delete" type="Emphasized" press="onDelete" />
                </content>
            </OverflowToolbar >

        </footer>
    </Page>
</mvc:View>
